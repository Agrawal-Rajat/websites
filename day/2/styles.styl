@import "./icomoon/style.css"

a
  text-decoration: none
body
  color #5F5F5F
  font-family: sans-serif;
  letter-spacing: 2px

.header {
  width: 100%;
  height: 30px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid #ccc;
}

.home {
  text-decoration: none;
  margin-left: 10px;
  font-weight: bold;
  color: #5f5f5f;
}

.nav
  width: 100%
  height: 30px
  display: flex;
  justify-content: flex-end;
  align-items: center;
  border-bottom: 1px solid #ccc

  & a
    text-decoration: none
    margin-left: 10px
    font-weight: bold;
    color #5f5f5f
    &:hover
      color orange


.text
  text-align: center;

.icon-door
  font-size: 10em
  cursor pointer

.doors
  margin: 3em 0
  width: 100%
  display: flex;
  justify-content: space-around;

.door
  &-green
    color lighten(green, 10%)
  &-orange
    color orange
  &-blue
    color steelblue
