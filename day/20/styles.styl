*
  box-sizing: border-box

a
  text-decoration: none
body
  color: #aaa
  font-family: sans-serif
  letter-spacing: 2px

header
  align-items: center
  border-bottom: 1px solid #ccc
  display: flex
  height: 30px
  justify-content: space-between
  width: 100%


.home
  color: inherit
  font-weight: bold
  margin-left: 10px
  text-decoration: none

.nav
  align-items: center
  border-bottom: 1px solid #ccc
  display: flex
  height: 30px
  justify-content: flex-end
  width: 100%

  & a
    color: inherit
    font-weight: bold
    margin-left: 10px
    text-decoration: none

    &:hover
      color: orange

.app
  align-items: center
  display: flex
  flex-direction: column
  justify-content: flex-start;
  min-height: 300px
  padding: 15px
  position: relative
  width: 100%

.dot
  position: absolute
  width: 30px
  height: 30px
  animation-name: push
  animation-duration: 1s

@keyframes push
  0%
    display: block

  50%
    transform: scale(3)
    opacity: .4

  90%
    display: none
