*
  box-sizing: border-box

a
  text-decoration: none
body
  color: #aaa
  font-family: sans-serif
  letter-spacing: 2px

header
  align-items: center
  border-bottom: 1px solid #ccc
  display: flex
  height: 30px
  justify-content: space-between
  width: 100%


.home
  color: inherit
  font-weight: bold
  margin-left: 10px
  text-decoration: none

.nav
  align-items: center
  border-bottom: 1px solid #ccc
  display: flex
  height: 30px
  justify-content: flex-end
  width: 100%

  & a
    color: inherit
    font-weight: bold
    margin-left: 10px
    text-decoration: none

    &:hover
      color: orange

.button
  background: none
  border 1px solid #ccc
  border-radius: 5px
  color: inherit
  cursor: pointer
  font-weight: bold
  padding: 1em

  &:hover
    background: #ccc
    color: white

.app
.intro
  align-items: center
  display: flex
  flex-direction: column
  height: 500px
  margin: 0 auto
  justify-content: flex-start;
  padding: 15px
  width: 100%

.game
  align-items: center
  display: flex
  flex-direction: column
  height: 400px
  justify-content: space-between;
  width: 100%

  &-options
    display: flex
    flex-direction: column

  &-score
  &-word
    align-self: flex-end
    background: steelblue
    border-radius: 5px 5px 0 0
    color: white
    margin: 0
    padding: 1em

  &-word
    border-radius: 5px 0px 5px 5px
    font-size: 1.5em
    letter-spacing: 10px
    padding: 2em 3em
    text-transform: uppercase

  &-form
    display: flex

  &-input
  &-submit
    background: none
    border 1px solid #ccc
    font-size: 1.2em
    padding: 1em

  &-input
    border-radius: 5px 0 0 5px

  &-submit
    border-radius: 0 5px 5px 0


.hiden
  display: none
