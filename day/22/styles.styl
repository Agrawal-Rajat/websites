*
  box-sizing: border-box

a
  text-decoration: none
body
  color: #aaa
  font-family: sans-serif
  letter-spacing: 2px

header
  align-items: center
  border-bottom: 1px solid #ccc
  display: flex
  height: 30px
  justify-content: space-between
  width: 100%


.home
  color: inherit
  font-weight: bold
  margin-left: 10px
  text-decoration: none

.nav
  align-items: center
  border-bottom: 1px solid #ccc
  display: flex
  height: 30px
  justify-content: flex-end
  width: 100%

  & a
    color: inherit
    font-weight: bold
    margin-left: 10px
    text-decoration: none

    &:hover
      color: orange

.app
.intro
.modal
  align-items: center
  background: #333
  color: white
  display: flex
  height: 500px
  flex-direction: column
  justify-content: center
  padding: 15px
  position: relative
  width: 100%

.button
  background: none
  border 1px solid white
  border-radius: 5px
  color: inherit
  cursor: pointer
  font-weight: bold
  padding: 1em

  &:hover
    background: white
    color #aaa


.game
  display: flex


.start
  background: steelblue
  border-radius: 50px 0px 0px 50px
  height: 50px
  width: 50px

.rute
  height: 50px
  width: 300px
  background: white

.end
  background: lightgreen
  border-radius: 0px 50px 50px 0px
  height: 50px
  width: 50px

.modal-buttons
  margin: 15px 0

.hiden
  display: none

.cursor
  cursor: none
