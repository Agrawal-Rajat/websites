*
  box-sizing: border-box

a
  text-decoration: none
body
  color: #aaa
  font-family: sans-serif
  letter-spacing: 2px

header
  align-items: center
  border-bottom: 1px solid #ccc
  display: flex
  height: 30px
  justify-content: space-between
  width: 100%


.home
  color: inherit
  font-weight: bold
  margin-left: 10px
  text-decoration: none

.nav
  align-items: center
  border-bottom: 1px solid #ccc
  display: flex
  height: 30px
  justify-content: flex-end
  width: 100%

  & a
    color: inherit
    font-weight: bold
    margin-left: 10px
    text-decoration: none
    &:hover
      color: orange

.app
  align-items: center
  display: flex
  flex-direction: column
  justify-content: space-around
  min-height: 50vh
  min-height: 400px
  padding: 15px
  width: 100%

.dados
  display: flex


[class^="cara"]
  background-color: steelblue
  border-radius: 10px
  display: flex
  height: 120px
  margin: .5em
  width: 120px

.columna
  display: flex
  flex-direction: column
  justify-content: space-between


.punto
  background-color: white
  border-radius: 50%
  height: 24px
  margin: .4em
  width: 24px


.cara1
  align-items: center
  justify-content: center


.cara2
  justify-content: space-between


.cara2 :last-child
  align-self: flex-end


.cara3
  justify-content: space-between


.cara3 :nth-child(2)
  align-self: center


.cara3 :last-child
  align-self: flex-end


.cara4
  justify-content: space-between


.cara5
  justify-content: space-between


.cara5 :nth-child(2)
  align-self: center

.cara6
  justify-content: space-between

.button
  border 1px solid #ccc
  border-radius: 5px
  font-weight: bold
  padding: 1.5em
  user-select: none
  &:hover
    background: #ccc
    color: white

.shake
  animation: shake .2s infinite

@keyframes shake
  0%
    transform: translateX(0px)
  50%
    transform: translateX(5px)
  100%
    transform: translateX(-5px)
