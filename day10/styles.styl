@keyframes rotate
  0%
    transform: rotate(360deg);
  50%
    transform: rotate(720deg);
  100%
    transform: rotate(1080deg);

@keyframes zoom
  0%
    transform: scale(2);
  50%
    transform: rotate(3);
  100%
    transform: rotate(1);

@keyframes skew
  0%
    transform: skew(50deg);
  25%
    transform: skew(30deg);
  50%
    transform: initial
  75%
    transform: skew(-30deg);
  100%
    transform: skew(-50deg);
