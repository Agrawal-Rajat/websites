body
  color #5F5F5F
  font-family: sans-serif;
  letter-spacing: 2px

.nav
  width: 100%
  height: 30px
  display: flex;
  justify-content: flex-end;
  align-items: center;
  border-bottom: 1px solid #ccc

  & a
    text-decoration: none
    margin-left: 10px
    font-weight: bold;
    color #5f5f5f
    &:hover
      color orange

.hero
.current
.websites
  padding: 3em 0
  width: 100%
  display: flex
  flex-direction: column;
  justify-content: center;
  align-items: center;

  &-title
    font-size: 3em
    margin: 0

  &-text
    margin: 10px
    font-weight: bold;
    font-size: 1.5em
    &-bold
      margin: 10px
      color orange
      font-size: 2em
      font-weight: bold;


.current
  border-top: 1px solid #ccc
  border-bottom: 1px solid #ccc

  &-link
    margin-top: 20px
    font-size: 2em
