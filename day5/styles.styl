*
  box-sizing: border-box;

a
  text-decoration: none
body
  color #5F5F5F
  font-family: sans-serif;
  letter-spacing: 2px

.header {
  width: 100%;
  height: 30px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid #ccc;
}

.home {
  text-decoration: none;
  margin-left: 10px;
  font-weight: bold;
  color: #5f5f5f;
}
.nav
  width: 100%
  height: 30px
  display: flex;
  justify-content: flex-end;
  align-items: center;
  border-bottom: 1px solid #ccc

  & a
    text-decoration: none
    margin-left: 10px
    font-weight: bold;
    color #5f5f5f
    &:hover
      color orange

.app
  width: 100%
  height: 500vh
  font-size: 1.5em
  letter-spacing: 3px
  margin: 15px 0
  display: flex;
  flex-direction: column;
  justify-content: space-between;

.text
  font-size: .6em
  color #aaa

pre
  margin: 0
  padding: 0
  display: flex
  font-size: .5em

.text-fixed
  position: fixed;
  top: 81%
  left: 8px

.bottom
  margin: 3em 0
