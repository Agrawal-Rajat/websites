*
  box-sizing: border-box;

a
  text-decoration: none
body
  color #5F5F5F
  font-family: sans-serif;
  letter-spacing: 2px

.header {
  width: 100%;
  height: 30px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid #ccc;
}

.home {
  text-decoration: none;
  margin-left: 10px;
  font-weight: bold;
  color: #5f5f5f;
}
.nav
  width: 100%
  height: 30px
  display: flex;
  justify-content: flex-end;
  align-items: center;
  border-bottom: 1px solid #ccc

  & a
    text-decoration: none
    margin-left: 10px
    font-weight: bold;
    color #5f5f5f
    &:hover
      color orange

.app
  width: 100%
  min-height: 50vh
  height: 300px
  padding: 15px
  display: flex;
  flex-direction: column;
  justify-content: space-around;

.week
  width: 100%
  display: flex;
  justify-content: space-around;

.day
  font-weight: bold;
  font-size: 1em
  padding: .4em
  @media screen and (min-width: 769px) {
    font-size: 2em
  }

.today
  border 1px solid #ccc
  border-radius: 5px

.current
  text-align: center;
  font-size: 2em
  font-style: italic;
  padding: 20px 0
  border-bottom: 1px solid #ccc
  border-top: 1px solid #ccc
