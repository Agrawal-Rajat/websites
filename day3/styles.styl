a
  text-decoration: none
body
  color #5F5F5F
  font-family: sans-serif;
  letter-spacing: 2px

.nav
  width: 100%
  height: 30px
  display: flex;
  justify-content: flex-end;
  align-items: center;
  border-bottom: 1px solid #ccc

  & a
    text-decoration: none
    margin-left: 10px
    font-weight: bold;
    color #5f5f5f
    &:hover
      color orange

.app
  width: 100vw
  height: 100vh
  display: flex;
  justify-content: center;
  align-items: center

#button-background
  border 1px solid #ccc
  padding: 2em
  border-radius: 8px
  cursor: pointer;
  user-select: none
  font-family: inherit;
  color inherit;
  &:hover
    background: transparent
    color white
